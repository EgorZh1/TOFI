@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

@section CSS {
    <link rel="stylesheet" type="text/css" href="~/css/sign-in.css" />
}

@inject SignInManager<ApplicationUser> SignInManager

<div class="main-content">
    <div class="content-column">
        <p class="sign-in-title">2 step authentication</p>
        <form class="login-form" id="account" method="post">
            <p class="label">Enter verification code that was send on your email</p>
            <div asp-validation-summary="ModelOnly" class="login-form__error"></div>
            <input asp-for="Input.TwoFactorCode" required type="text" class="login-form__input" id="2FA" placeholder="Enter code...">
            <button type="submit" class="login-form__log-in">Sign In</button>
        </form>
    </div>
</div>
